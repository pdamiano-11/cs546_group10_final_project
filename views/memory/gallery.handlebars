<header>
    <h2> Here are all your created memories: </h2>
</header>

<div>
    <h3>Filter Memories</h3>
    <br>
    <form id="sort_filter" method="POST">
        <label for="sorts">Sort by Type:</label>
        <select id="sorts" name="sorts" class="gallery">
            <option value="titleaz">by Title (A-Z)</option>
            <option value="date">by Date</option>
            <option value="location">by Location</option>
        </select>

        <label for="filters">Filter by...</label>
        <select id="filters" name="filters" class="gallery">
            <option value="imgmems">Memories with images</option>
            <option value="noimgmems">Memories without images</option>
        </select>
        <br>
        <input type="submit">
    </form>
</div>

<dl id="memoryList"></dl>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="/public/js/galleryFilters.js"></script>