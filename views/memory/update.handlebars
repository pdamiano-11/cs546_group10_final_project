<h2>{{title}}</h2>
<p>{{id}}</p>
<form action="/memory/update" method = POST enctype="multipart/form-data" id= "update-mem">
    {{!-- <label for = "id">Id:</label><br> --}}
    <input type="text" id="id" name="id" value="{{id}}" hidden><br>
    
    <label for = "title">Title:</label><br>
    <input type="text" id="title" name="title" value="{{memtitle}}"><br>
    <label for = "description">Description:</label><br>
    <input type="text" id="description" name="description" value="{{description}}"><br>
    <label for = "images">Image:</label><br>
    <input type="file" id="images" name="images" value=""><br>
    <label for = "date">Date:</label><br>
    <input type="text" id="date" name="date" value="{{date}}"><br>
    <label for = "location">Location:</label><br>
    <input type="text" id="location" name="location" value="{{location}}"><br>
    {{!-- <label for = "userId">UserId:</label><br>
    <input type="text" id="userId" name="userId" value="{{userId}}"><br> --}}
    <label for = "visibility">Visibility:</label><br>
    <input type="text" id="visibility" name="visibility" value="{{visibility}}"><br>
    <input type="submit" id = "submit" value="Submit">
</form> 
